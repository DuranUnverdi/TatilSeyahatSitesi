@using TatilSeyahatSitesi.Models.Sınıflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" style="width:300px;height:150px;"/>
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama.Substring(0,90)...</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2", "Default");
   
    <div class="clear"></div>
</div>